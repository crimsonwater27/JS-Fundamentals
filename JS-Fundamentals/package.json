- uses: actions/checkout@v4

    # --- Step 1: Set up Node.js ---
    - name: Use Node.js
      uses: actions/setup-node@v4
      with:
        node-version: '20'

    # --- Step 2: Install dependencies ---
    - name: Install dependencies
      working-directory: js-fundamentals # <-- path where package.json lives
      run: npm install # <-- CORRECT: 'run' is indented the same as 'working-directory'

    # --- Step 3: Run tests ---
    - name: Run tests
      working-directory: js-fundamentals
      run: npm test # <-- CORRECT: 'run' is indented the same as 'working-directory'
